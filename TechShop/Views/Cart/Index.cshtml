@model List<TechShop.Models.SessionCartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    decimal totalAmount = ViewBag.TotalAmount ?? 0;
    decimal shippingFee = ViewBag.ShippingFee ?? 0;
    decimal discountAmount = ViewBag.DiscountAmount ?? 0;
    decimal finalAmount = ViewBag.FinalAmount ?? 0;
    string couponCode = Session["CouponCode"]?.ToString();
}

<h2 class="mb-4">
    <i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn
    @if (Model != null && Model.Any())
    {
        <span class="badge badge-primary">@Model.Sum(x => x.Quantity) sản phẩm</span>
    }
</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        <!-- DANH SÁCH SẢN PHẨM -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Sản phẩm trong giỏ</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th width="45%">Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th width="15%">Số lượng</th>
                                    <th>Thành tiền</th>
                                    <th width="5%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="cart-item-@item.ProductID">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/Content/Images/no-image.jpg" : item.ImageUrl)"
                                                     alt="@item.ProductName"
                                                     style="width: 70px; height: 70px; object-fit: cover; border-radius: 8px;"
                                                     class="mr-3">
                                                <div>
                                                    <strong class="d-block">@item.ProductName</strong>
                                                    <small class="text-muted">Mã: SP@item.ProductID.ToString("D6")</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <span class="text-danger font-weight-bold">
                                                @item.Price.ToString("N0") đ
                                            </span>
                                        </td>
                                        <td class="align-middle">
                                            <div class="input-group input-group-sm" style="width: 120px;">
                                                <div class="input-group-prepend">
                                                    <button class="btn btn-outline-secondary"
                                                            type="button"
                                                            onclick="updateQuantity(@item.ProductID, @(item.Quantity - 1))">
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                </div>
                                                <input type="number"
                                                       class="form-control text-center"
                                                       id="quantity-@item.ProductID"
                                                       value="@item.Quantity"
                                                       min="1"
                                                       readonly>
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-secondary"
                                                            type="button"
                                                            onclick="updateQuantity(@item.ProductID, @(item.Quantity + 1))">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <strong class="text-danger" id="total-@item.ProductID">
                                                @item.TotalPrice.ToString("N0") đ
                                            </strong>
                                        </td>
                                        <td class="align-middle text-center">
                                            <button class="btn btn-sm btn-danger"
                                                    onclick="removeFromCart(@item.ProductID)"
                                                    title="Xóa sản phẩm">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- ACTIONS -->
            <div class="mt-3 d-flex justify-content-between">
                <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Tiếp tục mua hàng
                </a>
                <button class="btn btn-warning" onclick="clearCart()">
                    <i class="fas fa-times"></i> Xóa giỏ hàng
                </button>
            </div>
        </div>

        <!-- TỔNG TIỀN & MÃ GIẢM GIÁ -->
        <div class="col-md-4">

            <!-- MÃ GIẢM GIÁ -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0"><i class="fas fa-tag"></i> Mã giảm giá</h6>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(couponCode))
                    {
                        <div class="alert alert-success mb-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-check-circle"></i>
                                    <strong>@couponCode</strong>
                                    <br>
                                    <small class="text-muted">
                                        Giảm: <span id="discount-amount">@discountAmount.ToString("N0")</span> đ
                                    </small>
                                </div>
                                <button class="btn btn-sm btn-danger"
                                        onclick="removeCoupon()"
                                        title="Xóa mã">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="input-group">
                            <input type="text"
                                   class="form-control"
                                   id="couponCode"
                                   placeholder="Nhập mã giảm giá"
                                   onkeypress="if(event.keyCode==13) applyCoupon();">
                            <div class="input-group-append">
                                <button class="btn btn-primary"
                                        type="button"
                                        onclick="applyCoupon()">
                                    Áp dụng
                                </button>
                            </div>
                        </div>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-info-circle"></i> Nhập mã để nhận ưu đãi
                        </small>
                    }
                </div>
            </div>

            <!-- TỔNG TIỀN -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-receipt"></i> Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless mb-3">
                        <tr>
                            <td>Tạm tính:</td>
                            <td class="text-right">
                                <strong id="subtotal">@totalAmount.ToString("N0") đ</strong>
                            </td>
                        </tr>
                        <tr>
                            <td>Phí vận chuyển:</td>
                            <td class="text-right" id="shipping-fee">
                                @if (shippingFee == 0)
                                {
                                    <span class="text-success font-weight-bold">Miễn phí</span>
                                }
                                else
                                {
                                    <span>@shippingFee.ToString("N0") đ</span>
                                }
                            </td>
                        </tr>
                        @if (discountAmount > 0)
                        {
                            <tr class="text-success">
                                <td><i class="fas fa-tag"></i> Giảm giá:</td>
                                <td class="text-right font-weight-bold">
                                    -<span id="discount-value">@discountAmount.ToString("N0")</span> đ
                                </td>
                            </tr>
                        }
                        <tr class="border-top">
                            <td><strong>Tổng cộng:</strong></td>
                            <td class="text-right">
                                <h4 class="text-danger mb-0 font-weight-bold" id="final-total">
                                    @finalAmount.ToString("N0") đ
                                </h4>
                            </td>
                        </tr>
                    </table>

                    <!-- THÔNG BÁO MIỄN PHÍ SHIP -->
                    <div id="shipping-notice" class="alert alert-sm mb-3 @(totalAmount >= 500000 ? "alert-success" : "alert-info")">
                        @if (totalAmount >= 500000)
                        {
                            <i class="fas fa-truck"></i>
                            <text>Đơn hàng được miễn phí vận chuyển</text>
                        }
                        else
                        {
                            <i class="fas fa-info-circle"></i>
                            <text>Mua thêm @((500000 - totalAmount).ToString("N0")) đ để miễn phí ship</text>
                        }
                    </div>

                    <!-- NÚT THANH TOÁN -->
                    <a href="@Url.Action("Checkout", "Order")"
                       class="btn btn-success btn-block btn-lg">
                        <i class="fas fa-check-circle"></i> Tiến hành thanh toán
                    </a>

                    <!-- THÔNG TIN BẢO MẬT -->
                    <div class="text-center mt-3">
                        <small class="text-muted">
                            <i class="fas fa-lock"></i> Thanh toán an toàn & bảo mật
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- GIỎ HÀNG TRỐNG -->
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="fas fa-shopping-cart fa-5x text-muted mb-4"></i>
            <h3>Giỏ hàng của bạn đang trống</h3>
            <p class="text-muted mb-4">Hãy khám phá các sản phẩm tuyệt vời của chúng tôi</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag"></i> Khám phá sản phẩm
            </a>
        </div>
    </div>
}

@section scripts {
    <style>
        /* Card styles */
        .card {
            border: none;
            border-radius: 12px;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        /* Table styles */
        .table td {
            vertical-align: middle;
            padding: 15px 10px;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        /* Input group styles */
        .input-group-sm .btn {
            padding: 0.25rem 0.5rem;
        }

        .input-group input[type="number"]::-webkit-inner-spin-button,
        .input-group input[type="number"]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* Alert styles */
        .alert-sm {
            padding: 8px 12px;
            font-size: 0.9rem;
        }

        /* Button styles */
        .btn {
            border-radius: 8px;
            font-weight: 500;
        }

        .btn-lg {
            padding: 12px 20px;
            font-size: 1.1rem;
        }

        /* Badge styles */
        .badge {
            padding: 6px 12px;
            font-size: 0.9rem;
        }

        /* Animation */
        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            animation: slideIn 0.3s ease-out;
        }
    </style>
}