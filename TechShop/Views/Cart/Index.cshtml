@model List<TechShop.Models.SessionCartItem>
    @{
        ViewBag.Title = "Giỏ hàng";
    }

    <h2 class="mb-4"><i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Thành tiền</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="cart-item-@item.ProductId">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/Content/Images/no-image.jpg" : item.ImageUrl)"
                                                     alt="@item.ProductName"
                                                     style="width: 80px; height: 80px; object-fit: cover;"
                                                     class="mr-3">
                                                <strong>@item.ProductName</strong>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <span class="text-danger">@item.Price.ToString("N0") đ</span>
                                        </td>
                                        <td class="align-middle">
                                            <div class="input-group" style="width: 130px;">
                                                <div class="input-group-prepend">
                                                    <button class="btn btn-sm btn-outline-secondary" type="button"
                                                            onclick="updateQuantity(@item.ProductId, @(item.Quantity - 1))">
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                </div>
                                                <input type="number" class="form-control form-control-sm text-center"
                                                       id="quantity-@item.ProductId"
                                                       value="@item.Quantity"
                                                       min="1"
                                                       onchange="updateQuantity(@item.ProductId, this.value)">
                                                <div class="input-group-append">
                                                    <button class="btn btn-sm btn-outline-secondary" type="button"
                                                            onclick="updateQuantity(@item.ProductId, @(item.Quantity + 1))">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <strong class="text-danger" id="total-@item.ProductId">
                                                @item.TotalPrice.ToString("N0") đ
                                            </strong>
                                        </td>
                                        <td class="align-middle">
                                            <button class="btn btn-sm btn-danger" onclick="removeFromCart(@item.ProductId)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mt-3">
                    <a href="@Url.Action("Products", "Home")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Tiếp tục mua hàng
                    </a>
                    <button class="btn btn-warning" onclick="clearCart()">
                        <i class="fas fa-times"></i> Xóa giỏ hàng
                    </button>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Thông tin đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <td>Tạm tính:</td>
                                <td class="text-right">
                                    <strong id="subtotal">@ViewBag.TotalAmount.ToString("N0") đ</strong>
                                </td>
                            </tr>
                            <tr>
                                <td>Phí vận chuyển:</td>
                                <td class="text-right">Miễn phí</td>
                            </tr>
                            <tr class="border-top">
                                <td><strong>Tổng cộng:</strong></td>
                                <td class="text-right">
                                    <h4 class="text-danger mb-0" id="total">@ViewBag.TotalAmount.ToString("N0") đ</h4>
                                </td>
                            </tr>
                        </table>

                        <a href="@Url.Action("Checkout", "Order")" class="btn btn-success btn-block btn-lg mt-3">
                            <i class="fas fa-check"></i> Tiến hành thanh toán
                        </a>
                    </div>
                </div>

                <!-- Promotion Section -->
                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="font-weight-bold">Mã giảm giá</h6>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Nhập mã giảm giá">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">Áp dụng</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
            <h4>Giỏ hàng của bạn đang trống</h4>
            <p class="text-muted">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm</p>
            <a href="@Url.Action("Products", "Home")" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag"></i> Mua sắm ngay
            </a>
        </div>
    }

    @section scripts {
        <script>
    function updateQuantity(productId, quantity) {
        quantity = parseInt(quantity);
        if (quantity < 1) return;

        $.post('@Url.Action("UpdateQuantity", "Cart")',
            { productId: productId, quantity: quantity },
            function(data) {
                if (data.success) {
                    if (quantity == 0) {
                        $('#cart-item-' + productId).remove();
                        if ($('tbody tr').length == 0) {
                            location.reload();
                        }
                    } else {
                        $('#quantity-' + productId).val(quantity);
                        // Cập nhật tổng tiền của sản phẩm (cần tính lại ở client)
                    }

                    $('#subtotal').text(data.totalAmount.toLocaleString('vi-VN') + ' đ');
                    $('#total').text(data.totalAmount.toLocaleString('vi-VN') + ' đ');
                    $('#cartCount').text(data.cartCount);
                }
            }
        );
    }

    function removeFromCart(productId) {
        if (confirm('Bạn có chắc muốn xóa sản phẩm này?')) {
            $.post('@Url.Action("RemoveFromCart", "Cart")',
                { productId: productId },
                function(data) {
                    if (data.success) {
                        $('#cart-item-' + productId).remove();
                        $('#cartCount').text(data.cartCount);

                        if ($('tbody tr').length == 0) {
                            location.reload();
                        } else {
                            // Cập nhật tổng tiền
                            location.reload();
                        }
                    }
                }
            );
        }
    }

    function clearCart() {
        if (confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?')) {
            window.location.href = '@Url.Action("ClearCart", "Cart")';
        }
    }
        </script>
    }
