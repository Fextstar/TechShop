@model TechShop.Models.Post
@{
    ViewBag.Title = Model.Title;
}

<div class="container mt-4">

    <h2>@Model.Title</h2>

    <p class="text-muted">
        <i class="fa fa-user"></i> @Model.Author?.FullName
        &nbsp;&nbsp;
        <i class="fa fa-calendar"></i> @Model.PublishedDate?.ToString("dd/MM/yyyy")
        &nbsp;&nbsp;
        <i class="fa fa-eye"></i> @Model.ViewCount lượt xem
    </p>

    <!-- Thumbnail -->
    @if (!string.IsNullOrEmpty(Model.ThumbnailURL))
    {
        <img src="@Model.ThumbnailURL"
             alt="@Model.Title"
             class="img-fluid mb-4"
             style="max-height: 380px; object-fit: cover; width: 100%;" />
    }

    <!-- Nội dung bài viết -->
    <div class="mb-5" style="font-size: 1.05rem; line-height: 1.7;">
        @Html.Raw(Model.Content)
    </div>

    <a href="@Url.Action("Index", "Posts")" class="btn btn-secondary">← Quay lại</a>

</div>
