<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(ViewBag.Title != null ? ViewBag.Title + " - TechShop" : "TechShop - Thiết Bị Máy Tính")</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fas fa-laptop"></i> TechShop
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Trang chủ</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Product")">Sản phẩm</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Post")">Tin tức</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Liên hệ</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Cart")">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="badge badge-danger" id="cart-count">0</span>
                        </a>
                    </li>

                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" data-toggle="dropdown">
                                <i class="fas fa-user"></i> @User.Identity.Name
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Profile", "Account")">Tài khoản</a>
                                <a class="dropdown-item" href="@Url.Action("Orders", "Account")">Đơn hàng</a>

                                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                {
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Admin")">Quản trị</a>
                                }

                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("Logout", "Account")">Đăng xuất</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Account")">Đăng ký</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5 pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>TechShop</h5>
                    <p>Website kinh doanh thiết bị máy tính uy tín, chất lượng cao.</p>
                </div>
                <div class="col-md-4">
                    <h5>Liên kết</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Index", "Home")" class="text-white">Trang chủ</a></li>

                        <li><a href="@Url.Action("Index", "Products")" class="text-white">Sản phẩm</a></li>

                        <li><a href="@Url.Action("Contact", "Home")" class="text-white">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Liên hệ</h5>
                    <p>
                        <i class="fas fa-phone"></i> 0704449834<br />
                        <i class="fas fa-envelope"></i> 2200010884@nttu.edu.vn<br />
                        <i class="fas fa-map-marker-alt"></i> TP HCM, Việt Nam
                    </p>
                </div>
            </div>
            <hr class="bg-white" />
            <div class="text-center">
                <p>&copy; @DateTime.Now.Year TechShop - Khóa luận tốt nghiệp - Nguyễn Hồng Phúc</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
