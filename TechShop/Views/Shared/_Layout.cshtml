@{
    var isLogin = Session["UserID"] != null;
    var fullName = Session["FullName"] != null ? Session["FullName"].ToString() : "";
    var roleId = Session["RoleID"] != null ? (int)Session["RoleID"] : 0;
    var roleName = Session["RoleName"] != null ? Session["RoleName"].ToString() : "";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TechShop</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <!-- Animate.css cho hiệu ứng -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.2/css/bootstrap.min.css" />

    <!-- CUSTOM STYLE -->
    <style>
        .navbar-modern {
            background: linear-gradient(135deg, #667eea, #764ba2);
            padding: 12px 0;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

            .navbar-modern .navbar-brand {
                font-size: 24px;
                font-weight: bold;
                color: #fff !important;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .navbar-modern .nav-link {
                color: rgba(255,255,255,0.9) !important;
                font-weight: 500;
                padding: 10px 18px !important;
                border-radius: 8px;
                transition: 0.25s;
            }

                .navbar-modern .nav-link:hover {
                    background: rgba(255,255,255,0.15);
                    color: #fff !important;
                }

        .dropdown-menu {
            border-radius: 15px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
            border: none;
        }

        .dropdown-item {
            padding: 12px 20px;
            border-radius: 8px;
            transition: 0.2s;
        }

            .dropdown-item:hover {
                background: #667eea;
                color: #fff !important;
            }

        .logout-item {
            border-left: 4px solid #ff4757;
        }

        .admin-badge {
            background: linear-gradient(45deg, #ff6b6b, #ffa502);
            color: #fff;
            font-size: 10px;
            padding: 2px 8px;
            border-radius: 10px;
            margin-left: 6px;
            font-weight: bold;
        }

        #cart-count {
            background: #ff4757;
            border-radius: 50%;
            font-size: 12px;
            padding: 3px 7px;
            margin-left: 5px;
        }

        .body-content {
            padding: 40px 0;
            min-height: 70vh;
        }

        footer {
            background: #1f1f2e;
            color: #bbb;
            padding: 50px 0;
            margin-top: 50px;
        }

            footer h5 {
                color: #fff;
                margin-bottom: 20px;
            }

            footer a {
                color: #bbb;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }

        .copyright {
            text-align: center;
            margin-top: 30px;
            border-top: 1px solid #333;
            padding-top: 20px;
            color: #888;
        }

        .alert {
            border-radius: 10px;
        }

        /* FIX dropdown bị giật / di chuyển */
        .navbar .dropdown-menu {
            position: absolute;
            top: 100%;
            transform: none !important;
            margin-top: 8px;
            will-change: auto;
        }

            .navbar .dropdown-menu .dropdown-item {
                white-space: nowrap;
            }

        /* KHÔNG thay đổi padding khi hover */
        .navbar-modern .nav-link,
        .dropdown-item {
            box-sizing: border-box;
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-modern">
        <div class="container">

            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fas fa-laptop"></i> TechShop
            </a>

            <button class="navbar-toggler text-white" type="button" data-toggle="collapse" data-target="#mainNav">
                <span class="fas fa-bars"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">

                <!-- LEFT -->
                <ul class="navbar-nav mr-auto ml-3">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Products", "Home")"><i class="fas fa-box"></i> Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Posts")"><i class="fas fa-newspaper"></i> Tin tức</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")"><i class="fas fa-envelope"></i> Liên hệ</a>
                    </li>
                </ul>

                <!-- RIGHT -->
                <ul class="navbar-nav">

                    <!-- Cart -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Cart")">
                            <i class="fas fa-shopping-cart"></i>
                            <span id="cart-count" class="badge badge-danger">0</span>
                        </a>
                    </li>

                    @if (isLogin)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">
                                <i class="fas fa-user-circle"></i> @fullName
                                @if (roleId == 1 || roleId == 2)
                                {
                                    <span class="admin-badge">@(roleId == 1 ? "Admin" : "Manager")</span>
                                }
                            </a>

                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                                    <i class="fas fa-user"></i> Hồ sơ cá nhân
                                </a>

                                <a class="dropdown-item" href="@Url.Action("MyOrders", "Account")">
                                    <i class="fas fa-receipt"></i> Đơn hàng của tôi
                                </a>

                                @if (roleId == 1 || roleId == 2)
                                {
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-white"
                                       style="background: linear-gradient(45deg,#667eea,#764ba2);"
                                       href="@Url.Action("Index", "Admin")">
                                        <i class="fas fa-tools"></i> Trang quản trị
                                    </a>
                                }

                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item logout-item text-danger"
                                   href="@Url.Action("Logout", "Account")">
                                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                </a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Account")">
                                <i class="fas fa-user-plus"></i> Đăng ký
                            </a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- CONTENT -->
    <div class="container body-content">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>TechShop</h5>
                    <p>Website kinh doanh thiết bị máy tính.</p>
                </div>
                <div class="col-md-4">
                    <h5>Liên kết</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li><a href="@Url.Action("Products","Home")">Sản phẩm</a></li>
                        <li><a href="@Url.Action("Contact","Home")">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Liên hệ</h5>
                    <p>Email: 2200010884@nttu.edu.vn</p>
                    <p>Hotline: 0704449834</p>
                </div>
            </div>

            <div class="copyright">
                © @DateTime.Now.Year TechShop – KLTN – Nguyễn Hồng Phúc
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/cart.js"></script>

    <script>
        $(document).ready(function () {

            // Load cart count
            $.get('/Cart/GetCartCount', function (res) {
                if (res && res.count !== undefined) {
                    $('#cart-count').text(res.count);
                }
            });

            // Auto hide alerts
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>


    <!-- CART SCRIPT -->
    <script src="~/Scripts/cart.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
