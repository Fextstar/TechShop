@{
    var isLogin = Session["UserID"] != null;
    var fullName = Session["FullName"] != null ? Session["FullName"].ToString() : "";
    var roleId = Session["RoleID"] != null ? (int)Session["RoleID"] : 0;
    var roleName = Session["RoleName"] != null ? Session["RoleName"].ToString() : "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TechShop</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- CUSTOM STYLE THEO LOGIN -->
    <style>
        /* --- Navbar gradient hiện đại --- */
        .navbar-modern {
            background: linear-gradient(135deg, #667eea, #764ba2);
            padding: 12px 0;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

            .navbar-modern .navbar-brand {
                font-size: 24px;
                font-weight: bold;
                color: #fff !important;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .navbar-modern .nav-link {
                color: rgba(255,255,255,0.9) !important;
                font-weight: 500;
                padding: 10px 18px !important;
                border-radius: 8px;
                transition: 0.25s;
            }

                .navbar-modern .nav-link:hover {
                    background: rgba(255,255,255,0.15);
                    color: #fff !important;
                }

            .navbar-modern .dropdown-menu {
                border-radius: 15px;
                box-shadow: 0 15px 40px rgba(0,0,0,0.15);
                padding: 10px 0;
                border: none;
            }

            .navbar-modern .dropdown-item {
                padding: 12px 20px;
                border-radius: 8px;
                transition: 0.2s;
                margin: 0 10px;
            }

                .navbar-modern .dropdown-item:hover {
                    background: #667eea;
                    color: #fff !important;
                }

                .navbar-modern .dropdown-item i {
                    width: 20px;
                    text-align: center;
                    margin-right: 8px;
                }

        /* Badge cho Admin/Manager */
        .admin-badge {
            background: linear-gradient(45deg, #ff6b6b, #ffa502);
            color: white;
            font-size: 10px;
            padding: 2px 8px;
            border-radius: 10px;
            margin-left: 8px;
            font-weight: bold;
            text-transform: uppercase;
        }

        /* --- Badge giỏ hàng --- */
        #cart-count {
            background: #ff4757;
            border-radius: 50%;
            font-size: 12px;
            padding: 3px 7px;
            margin-left: 5px;
        }

        /* --- Main Content spacing --- */
        .body-content {
            padding: 40px 0;
            min-height: 70vh;
        }

        /* --- Footer hiện đại tối giản --- */
        footer {
            background: #1f1f2e;
            color: #bbb;
            padding: 50px 0;
            margin-top: 50px;
        }

            footer h5 {
                color: #fff;
                margin-bottom: 20px;
                font-size: 18px;
            }

            footer a {
                color: #bbb;
                transition: 0.2s;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }

            footer .copyright {
                text-align: center;
                margin-top: 30px;
                color: #888;
                border-top: 1px solid #333;
                padding-top: 20px;
            }

        /* Alert messages */
        .alert {
            border-radius: 10px;
            margin-bottom: 20px;
        }
    </style>

</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-modern">
        <div class="container">

            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <div><i class="fas fa-laptop"></i></div>
                TechShop
            </a>

            <button class="navbar-toggler text-white" type="button" data-toggle="collapse" data-target="#mainNav">
                <span class="fas fa-bars"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">

                <!-- LEFT MENU -->
                <ul class="navbar-nav mr-auto ml-3">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home"></i> Trang chủ
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Product")">
                            <i class="fas fa-box"></i> Sản phẩm
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Posts")">
                            <i class="fas fa-newspaper"></i> Tin tức
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">
                            <i class="fas fa-envelope"></i> Liên hệ
                        </a>
                    </li>
                </ul>

                <!-- RIGHT SECTION -->
                <ul class="navbar-nav">

                    <!-- Cart -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Cart")">
                            <i class="fas fa-shopping-cart"></i>
                            <span id="cart-count" class="badge badge-danger">0</span>
                        </a>
                    </li>

                    <!-- Nếu đã đăng nhập -->
                    @if (isLogin)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle"></i> @fullName
                                @* Hiển thị badge nếu là Admin hoặc Manager *@
                                @if (roleId == 1 || roleId == 2)
                                {
                                    <span class="admin-badge">@(roleId == 1 ? "Admin" : "Manager")</span>
                                }
                            </a>

                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                                    <i class="fas fa-user"></i> Hồ sơ cá nhân
                                </a>

                                <a class="dropdown-item" href="@Url.Action("Orders", "Account")">
                                    <i class="fas fa-receipt"></i> Đơn hàng của tôi
                                </a>

                                @* QUAN TRỌNG: Kiểm tra RoleID thay vì RoleName *@
                                @if (roleId == 1 || roleId == 2)
                                {
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Admin")" style="background: linear-gradient(45deg, #667eea, #764ba2); color: white; font-weight: bold;">
                                        <i class="fas fa-tools"></i> Trang Quản trị
                                    </a>
                                }

                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                </a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Account")">
                                <i class="fas fa-user-plus"></i> Đăng ký
                            </a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container body-content">
        @* Display TempData messages *@
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Warning"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle"></i> @TempData["Info"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <div class="row">

                <div class="col-md-4 mb-4">
                    <h5><i class="fas fa-laptop"></i> TechShop</h5>
                    <p>Website kinh doanh thiết bị máy tính chất lượng cao – giao diện hiện đại tối giản.</p>
                    <div class="social-links mt-3">
                        <a href="#" class="mr-3"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="mr-3"><i class="fab fa-youtube fa-lg"></i></a>
                        <a href="#" class="mr-3"><i class="fab fa-instagram fa-lg"></i></a>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <h5>Liên kết nhanh</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")"><i class="fas fa-angle-right"></i> Trang chủ</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Product")"><i class="fas fa-angle-right"></i> Sản phẩm</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Posts")"><i class="fas fa-angle-right"></i> Tin tức</a></li>
                        <li class="mb-2"><a href="@Url.Action("Contact", "Home")"><i class="fas fa-angle-right"></i> Liên hệ</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-4">
                    <h5>Thông tin liên hệ</h5>
                    <p>
                        <i class="fas fa-phone"></i> <strong>Hotline:</strong> 0704449834<br />
                        <i class="fas fa-envelope"></i> <strong>Email:</strong> 2200010884@nttu.edu.vn<br />
                        <i class="fas fa-map-marker-alt"></i> <strong>Địa chỉ:</strong> TP. Hồ Chí Minh<br />
                        <i class="fas fa-clock"></i> <strong>Giờ làm việc:</strong> 8:00 - 22:00
                    </p>
                </div>

            </div>

            <div class="copyright">
                © @DateTime.Now.Year TechShop – Khóa luận tốt nghiệp – Nguyễn Hồng Phúc (MSSV: 2200010884)
            </div>

        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script>
        // Auto-hide alerts after 5 seconds
        $(document).ready(function () {
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>