@model TechShop.Models.Product

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
    string fullName = Session["FullName"]?.ToString() ?? "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: #f5f6fa;
        }

        .main-content {
            margin-left: 260px;
            padding: 25px;
        }

        .page-title {
            font-size: 26px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        .form-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            max-width: 900px;
        }

        .form-group {
            margin-bottom: 18px;
        }

            .form-group label {
                font-weight: 600;
                margin-bottom: 5px;
                display: block;
            }

        .form-control {
            width: 100%;
            padding: 10px 14px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            transition: .25s;
        }

            .form-control:focus {
                border-color: #667eea;
                outline: none;
            }

        .btn-primary {
            background: #667eea;
            color: white;
            border: none;
            padding: 10px 22px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
        }

        .btn-secondary {
            background: #bdc3c7;
            color: white;
            padding: 10px 22px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
        }

        .btn-primary:hover {
            background: #5567d9;
        }

        .sidebar {
            position: fixed;
            width: 260px;
            height: 100vh;
            top: 0;
            left: 0;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding-top: 20px;
        }

        .menu-item {
            color: white;
            text-decoration: none;
            display: flex;
            padding: 12px 20px;
            align-items: center;
            gap: 10px;
            border-left: 3px solid transparent;
        }

            .menu-item:hover, .menu-item.active {
                background: rgba(255,255,255,0.1);
                border-left-color: #fff;
            }

        .row {
            display: flex;
            gap: 15px;
        }

        .col-6 {
            flex: 1;
        }

    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-laptop"></i>
                <span>TechShop</span>
            </div>
        </div>

        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Admin")" class="menu-item active">
                <i class="fas fa-chart-line"></i>
                <span>Dashboard</span>
            </a>
            <a href="@Url.Action("Products", "Admin")" class="menu-item">
                <i class="fas fa-box"></i>
                <span>Quản lý sản phẩm</span>
            </a>
            <a href="@Url.Action("Orders", "Admin")" class="menu-item">
                <i class="fas fa-shopping-cart"></i>
                <span>Quản lý đơn hàng</span>
            </a>
            <a href="@Url.Action("Users", "Admin")" class="menu-item">
                <i class="fas fa-users"></i>
                <span>Quản lý người dùng</span>
            </a>
            <a href="@Url.Action("Categories", "Admin")" class="menu-item">
                <i class="fas fa-tags"></i>
                <span>Danh mục</span>
            </a>
            <a href="@Url.Action("Brands", "Admin")" class="menu-item">
                <i class="fas fa-copyright"></i>
                <span>Thương hiệu</span>
            </a>
            <a href="@Url.Action("Statistics", "Admin")" class="menu-item">
                <i class="fas fa-chart-bar"></i>
                <span>Thống kê</span>
            </a>
            <a href="@Url.Action("Settings", "Admin")" class="menu-item">
                <i class="fas fa-cog"></i>
                <span>Cấu hình</span>
            </a>
            <a href="@Url.Action("Index", "Home")" class="menu-item">
                <i class="fas fa-home"></i>
                <span>Về trang chủ</span>
            </a>
            <a href="@Url.Action("Logout", "Account")" class="menu-item">
                <i class="fas fa-sign-out-alt"></i>
                <span>Đăng xuất</span>
            </a>
        </div>
    </div>

    <div class="main-content">

        <h2 class="page-title"><i class="fas fa-edit"></i> Chỉnh sửa sản phẩm</h2>

        <div class="form-card">
            @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken() <!--  THÊM TOKEN -->
                @Html.HiddenFor(m => m.ProductID)

                <div class="row">
                    <div class="col-6">

                        <!-- Tên sản phẩm -->
                        <div class="form-group">
                            <label>Tên sản phẩm</label>
                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                        </div>

                        <!-- SKU -->
                        <div class="form-group">
                            <label>Mã SKU</label>
                            @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
                        </div>

                        <!-- Danh mục -->
                        <div class="form-group">
                            <label>Danh mục</label>
                            @Html.DropDownListFor(m => m.CategoryID, (SelectList)ViewBag.Categories,
                                "-- Chọn danh mục --",
                                new { @class = "form-control" })
                        </div>

                        <!-- Thương hiệu -->
                        <div class="form-group">
                            <label>Thương hiệu</label>
                            @Html.DropDownListFor(m => m.BrandID, (SelectList)ViewBag.Brands,
                                "-- Chọn thương hiệu --",
                                new { @class = "form-control" })
                        </div>

                        <!-- Giá -->
                        <div class="form-group">
                            <label>Giá</label>
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "text" })
                        </div>

                        <!-- Giá giảm -->
                        <div class="form-group">
                            <label>Giá giảm (nếu có)</label>
                            @Html.TextBoxFor(m => m.DiscountPrice, new { @class = "form-control", type = "text" })
                        </div>

                    </div>

                    <div class="col-6">

                        <!-- Tồn kho -->
                        <div class="form-group">
                            <label>Tồn kho</label>
                            @Html.TextBoxFor(m => m.StockQuantity, new { @class = "form-control", type = "number" })
                        </div>

                        <!-- Ảnh URL -->
                        <div class="form-group">
                            <label>Ảnh (URL)</label>
                            <input type="file" name="ImageFile" class="form-control" />
                        </div>

                        <!-- Mô tả -->
                        <div class="form-group">
                            <label>Mô tả</label>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
                        </div>

                        <!-- Trạng thái -->
                        <div class="form-group">
                            <label>Trạng thái</label><br />
                            @Html.CheckBoxFor(m => m.IsActive) Hoạt động
                        </div>

                        <!-- Nổi bật -->
                        <div class="form-group">
                            <label>Nổi bật</label><br />
                            @Html.CheckBoxFor(m => m.IsFeatured) Sản phẩm nổi bật
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn-primary">
                    <i class="fas fa-save"></i> Lưu thay đổi
                </button>

                <a href="@Url.Action("Products", "Admin")" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            }
        </div>

    </div>

</body>
</html>
