@model TechShop.Models.Order
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Model.OrderCode</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Segoe UI', sans-serif; background: #f5f6fa; }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 260px;
            height: 100vh;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff;
            padding: 20px 0;
            overflow-y: auto;
        }

        .sidebar-header { text-align: center; margin-bottom: 30px; }
        .sidebar-header .logo {
            font-size: 22px;
            font-weight: bold;
            display: flex;
            justify-content: center;
            gap: 10px;
            align-items: center;
        }

        .menu-item {
            padding: 12px 25px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: white;
            text-decoration: none;
            font-size: 15px;
            border-left: 3px solid transparent;
            transition: 0.3s;
        }

        .menu-item:hover, .menu-item.active {
            background: rgba(255,255,255,0.12);
            border-left-color: #fff;
        }

        /* Main Content */
        .main-content {
            margin-left: 260px;
            padding: 30px;
            background: #f5f6fa;
            min-height: 100vh;
        }

        .topbar {
            background: #fff;
            padding: 20px 25px;
            border-radius: 12px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.08);
            margin-bottom: 25px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .page-title { font-size: 22px; font-weight: 700; margin: 0; }

        /* Cards */
        .card {
            background: #fff;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.08);
            margin-bottom: 20px;
        }

        .card-header {
            font-size: 18px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f5f6fa;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #f5f6fa;
        }

        .info-label {
            font-weight: 600;
            color: #555;
        }

        .info-value {
            color: #333;
        }

        /* Table */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead tr { background: #f0f2f5; }

        th, td {
            padding: 12px 10px;
            border-bottom: 1px solid #eee;
            font-size: 14px;
            text-align: left;
        }

        tr:hover { background: #f8f9fa; }

        /* Badges */
        .badge {
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 12px;
            font-weight: bold;
            display: inline-block;
        }

        .badge-warning { background: #fff3cd; color: #856404; }
        .badge-info { background: #d1ecf1; color: #0c5460; }
        .badge-primary { background: #cce5ff; color: #004085; }
        .badge-success { background: #d4edda; color: #155724; }
        .badge-danger { background: #f8d7da; color: #721c24; }
        .badge-secondary { background: #e2e3e5; color: #383d41; }

        /* Buttons */
        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: 0.3s;
            display: inline-block;
        }

        .btn-primary { background: linear-gradient(135deg, #667eea, #764ba2); color: #fff; }
        .btn-success { background: #28a745; color: #fff; }
        .btn-warning { background: #ffc107; color: #000; }
        .btn-danger { background: #dc3545; color: #fff; }
        .btn-secondary { background: #6c757d; color: #fff; }

        .btn:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0,0,0,0.2); }

        /* Grid Layout */
        .grid-2 {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 20px;
        }

        /* Product Image */
        .product-img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 10px;
        }

        /* Alert */
        .alert {
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .alert-warning {
            background: #fff3cd;
            color: #856404;
            border-left: 4px solid #ffc107;
        }

        /* Status Update Form */
        .status-update {
            display: flex;
            gap: 10px;
            align-items: center;
            margin-top: 15px;
        }

        .status-update select {
            padding: 10px;
            border-radius: 8px;
            border: 2px solid #ddd;
            font-size: 14px;
            flex: 1;
        }

        .total-row {
            background: #f8f9fa;
            font-weight: bold;
        }

        .text-right { text-align: right; }
        .text-center { text-align: center; }
        .text-danger { color: #dc3545; }
        .text-success { color: #28a745; }

        @@media (max-width: 768px) {
            .grid-2 { grid-template-columns: 1fr; }
            .main-content { margin-left: 0; padding: 15px; }
            .sidebar { display: none; }
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-laptop"></i>
                <span>TechShop</span>
            </div>
        </div>

        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Admin")" class="menu-item active">
                <i class="fas fa-chart-line"></i>
                <span>Dashboard</span>
            </a>
            <a href="@Url.Action("Products", "Admin")" class="menu-item">
                <i class="fas fa-box"></i>
                <span>Quản lý sản phẩm</span>
            </a>
            <a href="@Url.Action("Orders", "Admin")" class="menu-item">
                <i class="fas fa-shopping-cart"></i>
                <span>Quản lý đơn hàng</span>
            </a>
            <a href="@Url.Action("Users", "Admin")" class="menu-item">
                <i class="fas fa-users"></i>
                <span>Quản lý người dùng</span>
            </a>
            <a href="@Url.Action("Categories", "Admin")" class="menu-item">
                <i class="fas fa-tags"></i>
                <span>Danh mục</span>
            </a>
            <a href="@Url.Action("Brands", "Admin")" class="menu-item">
                <i class="fas fa-copyright"></i>
                <span>Thương hiệu</span>
            </a>
            <a href="@Url.Action("Statistics", "Admin")" class="menu-item">
                <i class="fas fa-chart-bar"></i>
                <span>Thống kê</span>
            </a>
            <a href="@Url.Action("Settings", "Admin")" class="menu-item">
                <i class="fas fa-cog"></i>
                <span>Cấu hình</span>
            </a>
            <a href="@Url.Action("Index", "Home")" class="menu-item">
                <i class="fas fa-home"></i>
                <span>Về trang chủ</span>
            </a>
            <a href="@Url.Action("Logout", "Account")" class="menu-item">
                <i class="fas fa-sign-out-alt"></i>
                <span>Đăng xuất</span>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Bar -->
        <div class="topbar">
            <h1 class="page-title">
                <i class="fas fa-file-invoice"></i> Chi tiết đơn hàng: @Model.OrderCode
            </h1>
            <a href="@Url.Action("Orders", "Admin")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
            </div>
        }

        <div class="grid-2">
            <!-- Left Column -->
            <div>
                <!-- Thông tin đơn hàng -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-info-circle"></i> Thông tin đơn hàng
                    </div>

                    <div class="info-row">
                        <span class="info-label">Mã đơn hàng:</span>
                        <span class="info-value"><strong>@Model.OrderCode</strong></span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Ngày đặt:</span>
                        <span class="info-value">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Trạng thái:</span>
                        <span class="info-value">
                            @{
                                string badgeClass = "badge-warning";
                                switch (Model.Status.StatusName)
                                {
                                    case "Đã xác nhận": badgeClass = "badge-info"; break;
                                    case "Đang chuẩn bị":
                                    case "Đang giao": badgeClass = "badge-primary"; break;
                                    case "Đã giao": badgeClass = "badge-success"; break;
                                    case "Đã hủy": badgeClass = "badge-danger"; break;
                                }
                            }
                            <span class="badge @badgeClass">@Model.Status.StatusName</span>
                        </span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Phương thức thanh toán:</span>
                        <span class="info-value">@Model.PaymentMethod</span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Trạng thái thanh toán:</span>
                        <span class="info-value">
                            @if (Model.PaymentStatus == "Đã thanh toán")
                            {
                                <span class="badge badge-success">Đã thanh toán</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Chưa thanh toán</span>
                            }
                        </span>
                    </div>

                    @if (Model.ShippedDate.HasValue)
                    {
                        <div class="info-row">
                            <span class="info-label">Ngày giao hàng:</span>
                            <span class="info-value">@Model.ShippedDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    }

                    @if (Model.DeliveredDate.HasValue)
                    {
                        <div class="info-row">
                            <span class="info-label">Ngày hoàn thành:</span>
                            <span class="info-value text-success">@Model.DeliveredDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Note))
                    {
                        <div class="info-row">
                            <span class="info-label">Ghi chú:</span>
                            <span class="info-value"><em>@Model.Note</em></span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.CancelReason))
                    {
                        <div class="alert alert-warning">
                            <strong>Lý do hủy:</strong> @Model.CancelReason
                        </div>
                    }
                </div>

                <!-- Thông tin khách hàng -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-user"></i> Thông tin khách hàng
                    </div>

                    <div class="info-row">
                        <span class="info-label">Họ tên:</span>
                        <span class="info-value"><strong>@Model.CustomerName</strong></span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Số điện thoại:</span>
                        <span class="info-value">@Model.CustomerPhone</span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Email:</span>
                        <span class="info-value">@Model.CustomerEmail</span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Địa chỉ giao hàng:</span>
                        <span class="info-value">@Model.ShippingAddress</span>
                    </div>
                </div>

                <!-- Danh sách sản phẩm -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-box"></i> Sản phẩm (@Model.OrderDetails.Count)
                    </div>

                    <table>
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-right">Đơn giá</th>
                                <th class="text-right">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in Model.OrderDetails)
                            {
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center;">
                                            @if (detail.Product?.ProductImages != null && detail.Product.ProductImages.Any())
                                            {
                                                var img = detail.Product.ProductImages.FirstOrDefault(i => i.IsPrimary);
                                                <img src="@(img?.ImageURL ?? "/Content/Images/no-image.jpg")"
                                                     class="product-img" alt="@detail.ProductName" />
                                            }
                                            else
                                            {
                                                <img src="/Content/Images/no-image.jpg"
                                                     class="product-img" alt="@detail.ProductName" />
                                            }
                                            <strong>@detail.ProductName</strong>
                                        </div>
                                    </td>
                                    <td class="text-center">@detail.Quantity</td>
                                    <td class="text-right">@detail.UnitPrice.ToString("N0") đ</td>
                                    <td class="text-right text-danger">
                                        <strong>@detail.TotalPrice.ToString("N0") đ</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Right Column -->
            <div>
                <!-- Tổng thanh toán -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-receipt"></i> Tổng thanh toán
                    </div>

                    <div class="info-row">
                        <span class="info-label">Tạm tính:</span>
                        <span class="info-value"><strong>@Model.TotalAmount.ToString("N0") đ</strong></span>
                    </div>

                    <div class="info-row">
                        <span class="info-label">Phí vận chuyển:</span>
                        <span class="info-value">@Model.ShippingFee.ToString("N0") đ</span>
                    </div>

                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="info-row text-success">
                            <span class="info-label">Giảm giá:</span>
                            <span class="info-value">-@Model.DiscountAmount.ToString("N0") đ</span>
                        </div>
                    }

                    <div class="info-row total-row" style="border-top: 2px solid #ddd; margin-top: 10px; padding-top: 15px;">
                        <span class="info-label" style="font-size: 16px;">Tổng cộng:</span>
                        <span class="info-value text-danger" style="font-size: 20px;">
                            <strong>@Model.FinalAmount.ToString("N0") đ</strong>
                        </span>
                    </div>
                </div>

                <!-- Cập nhật trạng thái -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-sync-alt"></i> Cập nhật trạng thái
                    </div>

                    <form id="updateStatusForm">
                        <div class="status-update">
                            <select id="statusSelect" class="form-control">
                                @{
                                    var statuses = ViewBag.OrderStatuses as List<TechShop.Models.OrderStatus>
                                        ?? new List<TechShop.Models.OrderStatus>();
                                }
                                @foreach (var status in statuses)
                                {
                                    <option value="@status.StatusID" @(status.StatusID == Model.StatusID ? "selected" : "")>
                                        @status.StatusName
                                    </option>
                                }
                            </select>
                            <button type="button" class="btn btn-primary" onclick="updateStatus()">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                        </div>
                    </form>

                    <div style="margin-top: 15px; padding: 15px; background: #f8f9fa; border-radius: 8px;">
                        <small style="color: #666;">
                            <i class="fas fa-info-circle"></i>
                            Cập nhật trạng thái đơn hàng để khách hàng có thể theo dõi
                        </small>
                    </div>
                </div>

                <!-- Thao tác nhanh -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-tasks"></i> Thao tác
                    </div>

                    <div style="display: flex; flex-direction: column; gap: 10px;">
                        <button class="btn btn-success" onclick="printOrder()">
                            <i class="fas fa-print"></i> In đơn hàng
                        </button>

                        @if (Model.Status.StatusName != "Đã hủy" && Model.Status.StatusName != "Đã giao")
                        {
                            <button class="btn btn-danger" onclick="cancelOrder()">
                                <i class="fas fa-times"></i> Hủy đơn hàng
                            </button>
                        }

                        <a href="@Url.Action("Orders", "Admin")" class="btn btn-secondary">
                            <i class="fas fa-list"></i> Về danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        function updateStatus() {
            var statusId = $('#statusSelect').val();
            var orderId = @Model.OrderID;

            if (!confirm('Bạn có chắc muốn cập nhật trạng thái đơn hàng?')) return;

            $.ajax({
                url: '@Url.Action("UpdateOrderStatus", "Admin")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ orderId: orderId, statusId: statusId }),
                success: function(result) {
                    if (result.success) {
                        alert(result.message);
                        location.reload();
                    } else {
                        alert(result.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra khi cập nhật trạng thái!');
                }
            });
        }

        function cancelOrder() {
            var reason = prompt('Nhập lý do hủy đơn hàng:');
            if (!reason) return;

            // TODO: Implement cancel order API
            alert('Chức năng hủy đơn hàng đang được phát triển');
        }

        function printOrder() {
            window.print();
        }
    </script>

</body>
</html>