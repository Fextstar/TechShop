@model TechShop.Models.Product

@{
    ViewBag.Title = "Thêm sản phẩm mới";
    string fullName = Session["FullName"]?.ToString() ?? "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, sans-serif;
            background: #f5f6fa;
            margin: 0;
        }

        /* Copy từ Products layout */
        .sidebar {
            position: fixed;
            width: 260px;
            height: 100vh;
            top: 0;
            left: 0;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding-top: 20px;
        }

        .menu-item {
            color: white;
            text-decoration: none;
            display: flex;
            padding: 12px 20px;
            align-items: center;
            gap: 10px;
            border-left: 3px solid transparent;
        }

            .menu-item:hover, .menu-item.active {
                background: rgba(255,255,255,0.1);
                border-left-color: #fff;
            }

        .main-content {
            margin-left: 260px;
            padding: 25px;
        }

        .topbar {
            background: white;
            padding: 15px 25px;
            border-radius: 10px;
            margin-bottom: 25px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.07);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.08);
            max-width: 900px;
        }

        .form-group {
            margin-bottom: 18px;
        }

        label {
            font-weight: 600;
            margin-bottom: 5px;
            display: block;
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border-radius: 8px;
            border: 2px solid #e0e0e0;
            font-size: 14px;
        }

            .form-control:focus {
                border-color: #667eea;
                outline: none;
            }

        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 600;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }

        .btn-secondary {
            background: #e0e0e0;
        }

        .row {
            display: flex;
            gap: 15px;
        }

        .col-6 {
            flex: 1;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="@Url.Action("Index", "Admin")" class="menu-item">
            <i class="fas fa-chart-line"></i> Dashboard
        </a>
        <a href="@Url.Action("Products", "Admin")" class="menu-item active">
            <i class="fas fa-box"></i> Quản lý sản phẩm
        </a>
        <a href="@Url.Action("Orders", "Admin")" class="menu-item">
            <i class="fas fa-shopping-cart"></i> Đơn hàng
        </a>
        <a href="@Url.Action("Users", "Admin")" class="menu-item">
            <i class="fas fa-users"></i> Người dùng
        </a>
        <a href="@Url.Action("Logout", "Account")" class="menu-item">
            <i class="fas fa-sign-out-alt"></i> Đăng xuất
        </a>
    </div>

    <!-- Main -->
    <div class="main-content">

        <div class="topbar">
            <h2><i class="fas fa-plus"></i> Thêm sản phẩm mới</h2>

            <a href="@Url.Action("Products", "Admin")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>

        <div class="form-card">
            @using (Html.BeginForm("ProductCreate", "Admin", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Tên sản phẩm</label>
                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>SKU</label>
                            @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Danh mục</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (System.Data.DataRow r in ViewBag.Categories.Rows)
                                {
                                    <option value="@r["CategoryID"]">@r["CategoryName"]</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Thương hiệu</label>
                            <select name="BrandID" class="form-control">
                                @foreach (System.Data.DataRow r in ViewBag.Brands.Rows)
                                {
                                    <option value="@r["BrandID"]">@r["BrandName"]</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Giá</label>
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
                        </div>

                        <div class="form-group">
                            <label>Giá giảm (nếu có)</label>
                            @Html.TextBoxFor(m => m.DiscountPrice, new { @class = "form-control", type = "number" })
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label>Tồn kho</label>
                            @Html.TextBoxFor(m => m.StockQuantity, new { @class = "form-control", type = "number" })
                        </div>

                        <div class="form-group">
                            <label>Ảnh (URL)</label>
                            @Html.TextBoxFor(m => m.ImageURL, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Mô tả</label>
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Trạng thái</label><br />
                            @Html.CheckBoxFor(m => m.IsActive) Hoạt động
                        </div>

                        <div class="form-group">
                            <label>Nổi bật</label><br />
                            @Html.CheckBoxFor(m => m.IsFeatured) Sản phẩm nổi bật
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary"><i class="fas fa-save"></i> Lưu sản phẩm</button>
            }
        </div>
    </div>

</body>
</html>
