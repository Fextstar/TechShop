@model TechShop.Models.Product

@{
    ViewBag.Title = "Thêm sản phẩm mới";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        /* ===== RESET FIX TRÀN ===== */
        *, *::before, *::after {
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, sans-serif;
            background: #f5f6fa;
            margin: 0;
            overflow-x: hidden;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            position: fixed;
            width: 260px;
            height: 100vh;
            top: 0;
            left: 0;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding-top: 20px;
        }

        .menu-item {
            color: white;
            text-decoration: none;
            display: flex;
            padding: 12px 20px;
            align-items: center;
            gap: 10px;
            border-left: 3px solid transparent;
        }

            .menu-item:hover,
            .menu-item.active {
                background: rgba(255,255,255,0.1);
                border-left-color: #fff;
            }

        /* ===== MAIN ===== */
        .main-content {
            margin-left: 260px;
            padding: 25px;
        }

        .topbar {
            background: white;
            padding: 15px 25px;
            border-radius: 10px;
            margin-bottom: 25px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.07);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.08);
            max-width: 900px;
        }

        /* ===== FORM ===== */
        .form-group {
            margin-bottom: 18px;
        }

        label {
            font-weight: 600;
            margin-bottom: 6px;
            display: block;
        }

        .form-control {
            width: 100%;
            max-width: 100%;
            padding: 12px 15px;
            border-radius: 8px;
            border: 2px solid #e0e0e0;
            font-size: 14px;
        }

            .form-control:focus {
                border-color: #667eea;
                outline: none;
            }

        /* ===== GRID FIX ===== */
        .row {
            display: flex;
            flex-wrap: wrap;
            margin-left: -7.5px;
            margin-right: -7.5px;
        }

        .col-6 {
            width: 50%;
            padding: 0 7.5px;
        }

        /* ===== BUTTON ===== */
        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 600;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }

        .btn-secondary {
            background: #e0e0e0;
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="sidebar-menu">
            <a href="@Url.Action("Products", "Admin")" class="menu-item active">
                <i class="fas fa-box"></i> Quản lý sản phẩm
            </a>
            <a href="@Url.Action("Index", "Home")" class="menu-item">
                <i class="fas fa-home"></i> Trang chủ
            </a>
        </div>
    </div>

    <!-- MAIN -->
    <div class="main-content">

        <div class="topbar">
            <h2><i class="fas fa-plus"></i> Thêm sản phẩm mới</h2>
            <a href="@Url.Action("Products", "Admin")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>

        <div class="form-card">
            @using (Html.BeginForm("CreateProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Tên sản phẩm</label>
                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>SKU</label>
                            @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label>Giá</label>
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu sản phẩm
                </button>
            }
        </div>
    </div>

</body>
</html>
