@model TechShop.Models.Product

@{
    ViewBag.Title = "Thêm sản phẩm mới";
    string fullName = Session["FullName"]?.ToString() ?? "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, sans-serif;
            background: #f5f6fa;
        }

        .sidebar {
            position: fixed;
            width: 260px;
            height: 100vh;
            top: 0;
            left: 0;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding-top: 20px;
        }

        .menu-item {
            color: white;
            text-decoration: none;
            display: flex;
            padding: 12px 20px;
            align-items: center;
            gap: 10px;
            border-left: 3px solid transparent;
        }

            .menu-item:hover, .menu-item.active {
                background: rgba(255,255,255,0.1);
                border-left-color: #fff;
            }

        .main-content {
            margin-left: 260px;
            padding: 25px;
        }

        .topbar {
            background: white;
            padding: 15px 25px;
            border-radius: 10px;
            margin-bottom: 25px;
            box-shadow: 0 3px 12px rgba(0,0,0,0.07);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.08);
            max-width: 1000px;
        }

        .row {
            display: flex;
            gap: 15px;
        }

        .col-6 {
            flex: 1;
        }

        .form-group {
            margin-bottom: 18px;
        }

        label {
            font-weight: 600;
            display: block;
            margin-bottom: 6px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            border: 2px solid #e0e0e0;
        }

            .form-control:focus {
                border-color: #667eea;
            }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 12px 22px;
            border-radius: 8px;
            font-weight: 600;
        }

        .btn-secondary {
            background: #bdc3c7;
            color: white;
            padding: 12px 22px;
            border-radius: 8px;
            font-weight: 600;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="@Url.Action("Index", "Admin")" class="menu-item">
            <i class="fas fa-chart-line"></i> Dashboard
        </a>
        <a href="@Url.Action("Products", "Admin")" class="menu-item active">
            <i class="fas fa-box"></i> Quản lý sản phẩm
        </a>
        <a href="@Url.Action("Orders", "Admin")" class="menu-item">
            <i class="fas fa-shopping-cart"></i> Đơn hàng
        </a>
        <a href="@Url.Action("Users", "Admin")" class="menu-item">
            <i class="fas fa-users"></i> Người dùng
        </a>
        <a href="@Url.Action("Logout", "Account")" class="menu-item">
            <i class="fas fa-sign-out-alt"></i> Đăng xuất
        </a>
    </div>

    <!-- Main Content -->
    <div class="main-content">

        <div class="topbar">
            <h2><i class="fas fa-plus"></i> Thêm sản phẩm mới</h2>

            <a href="@Url.Action("Products", "Admin")" class="btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>

        <div class="form-card">

            @using (Html.BeginForm("CreateProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-6">

                        <div class="form-group">
                            <label>Tên sản phẩm</label>
                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Mã SKU</label>
                            @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Danh mục</label>
                            @Html.DropDownListFor(m => m.CategoryID,
                                (SelectList)ViewBag.Categories,
                                "-- Chọn danh mục --",
                                new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Thương hiệu</label>
                            @Html.DropDownListFor(m => m.BrandID,
                                (SelectList)ViewBag.Brands,
                                "-- Chọn thương hiệu --",
                                new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Giá</label>
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
                        </div>

                        <div class="form-group">
                            <label>Giá giảm (nếu có)</label>
                            @Html.TextBoxFor(m => m.DiscountPrice, new { @class = "form-control", type = "number" })
                        </div>

                        <div class="form-group">
                            <label>Số lượng tồn</label>
                            @Html.TextBoxFor(m => m.StockQuantity, new { @class = "form-control", type = "number" })
                        </div>

                        <div class="form-group">
                            <label>Mức tồn kho tối thiểu</label>
                            @Html.TextBoxFor(m => m.MinStockLevel, new { @class = "form-control", type = "number" })
                        </div>

                    </div>

                    <div class="col-6">

                        <div class="form-group">
                            <label>Trọng lượng (kg)</label>
                            @Html.TextBoxFor(m => m.Weight, new { @class = "form-control", type = "number", step = "0.1" })
                        </div>

                        <div class="form-group">
                            <label>Bảo hành (tháng)</label>
                            @Html.TextBoxFor(m => m.Warranty, new { @class = "form-control", type = "number" })
                        </div>

                        <div class="form-group">
                            <label>Ảnh chính (Upload)</label>
                            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="form-group">
                            <label>Mô tả</label>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
                        </div>

                        <div class="form-group">
                            <label>Thông số kỹ thuật</label>
                            @Html.TextAreaFor(m => m.Specifications, new { @class = "form-control", rows = 6 })
                        </div>

                        <div class="form-group">
                            <label>Trạng thái</label><br />
                            @Html.CheckBoxFor(m => m.IsActive) Hoạt động
                        </div>

                        <div class="form-group">
                            <label>Nổi bật</label><br />
                            @Html.CheckBoxFor(m => m.IsFeatured) Sản phẩm nổi bật
                        </div>

                    </div>
                </div>

                <button type="submit" class="btn-primary">
                    <i class="fas fa-save"></i> Lưu sản phẩm
                </button>
            }
        </div>
    </div>

</body>
</html>
