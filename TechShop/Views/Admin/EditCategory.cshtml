@model TechShop.Models.Category

@{
    ViewBag.Title = "Chỉnh sửa danh mục";
}

<h2>Chỉnh sửa danh mục</h2>

@using (Html.BeginForm("EditCategory", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CategoryID)

    <div class="form-group">
        <label>Tên danh mục</label>
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.CategoryName)
    </div>

    <div class="form-group">
        <label>Mô tả</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        @Html.CheckBoxFor(m => m.IsActive) Hoạt động
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Cập nhật
    </button>

    <a href="@Url.Action("Categories", "Admin")" class="btn btn-secondary">
        Quay lại
    </a>
}
