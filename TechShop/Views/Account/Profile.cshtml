@model TechShop.Models.User

@{
    ViewBag.Title = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">

        <div class="card shadow-lg border-0">
            <div class="card-header text-white"
                 style="background: linear-gradient(45deg,#667eea,#764ba2);">
                <h4 class="mb-0">
                    <i class="fas fa-user-circle"></i> Hồ sơ cá nhân
                </h4>
            </div>

            <div class="card-body">

                @using (Html.BeginForm("Profile", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <!-- Username -->
                    <div class="form-group">
                        <label><i class="fas fa-user"></i> Tên đăng nhập</label>
                        <input type="text" class="form-control" value="@Model.Username" readonly />
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label><i class="fas fa-envelope"></i> Email</label>
                        <input type="email" class="form-control" value="@Model.Email" readonly />
                    </div>

                    <!-- FullName -->
                    <div class="form-group">
                        <label><i class="fas fa-id-card"></i> Họ và tên</label>
                        @Html.TextBoxFor(m => m.FullName, new
                        {
                            @class = "form-control",
                            placeholder = "Nhập họ và tên"
                        })
                    </div>

                    <!-- Phone -->
                    <div class="form-group">
                        <label><i class="fas fa-phone"></i> Số điện thoại</label>
                        @Html.TextBoxFor(m => m.PhoneNumber, new
                        {
                            @class = "form-control",
                            placeholder = "Nhập số điện thoại"
                        })
                    </div>

                    <!-- Address -->
                    <div class="form-group">
                        <label><i class="fas fa-map-marker-alt"></i> Địa chỉ</label>
                        @Html.TextAreaFor(m => m.Address, new
                        {
                            @class = "form-control",
                            rows = 3,
                            placeholder = "Nhập địa chỉ"
                        })
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("ChangePassword", "Account")"
                           class="btn btn-outline-secondary">
                            <i class="fas fa-key"></i> Đổi mật khẩu
                        </a>

                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-save"></i> Lưu thay đổi
                        </button>
                    </div>
                }

            </div>
        </div>

    </div>
</div>

@section scripts {
    <script>
        // Tự động focus vào họ tên
        $('input[name="FullName"]').focus();
    </script>
}
