@model IEnumerable<TechShop.Models.Product>
@{
    ViewBag.Title = "Trang chủ";
}

<!-- ================= BANNER ================= -->
<div id="carouselBanner" class="carousel slide mb-5" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/Images/banner1.png" class="d-block w-100" style="height:400px;object-fit:cover">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Images/banner2.jpg" class="d-block w-100" style="height:400px;object-fit:cover">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Images/banner3.jpg" class="d-block w-100" style="height:400px;object-fit:cover">
        </div>
    </div>
</div>

<!-- ================= CATEGORIES ================= -->
<div class="row mb-5">
    <div class="col-12 mb-3">
        <h3 class="section-title">
            <i class="fas fa-list"></i> Danh mục sản phẩm
        </h3>
    </div>

    @foreach (var c in ViewBag.Categories)
    {
        <div class="col-md-3 col-sm-6 mb-4">
            <a href="@Url.Action("Products","Home",new { categoryId = c.CategoryID })"
               class="text-decoration-none">
                <div class="card category-card text-center h-100">
                    <div class="card-body">
                        <i class="fas fa-laptop fa-3x mb-3"></i>
                        <h5 class="card-title">@c.CategoryName</h5>
                        <p class="card-text">@c.Description</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<!-- ================= FEATURED PRODUCTS ================= -->
<div class="row mb-3">
    <div class="col-12">
        <h3 class="section-title">
            <i class="fas fa-fire"></i> Sản phẩm nổi bật
        </h3>
    </div>
</div>

<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card product-card h-100">

                <a href="@Url.Action("ProductDetail","Home",new { id = p.ProductID })">
                    <img src="@p.PrimaryImageURL" class="card-img-top" style="height:200px;object-fit:cover">
                </a>

                <div class="card-body">
                    <h5 class="card-title">
                        <a href="@Url.Action("ProductDetail","Home",new { id = p.ProductID })">
                            @p.ProductName
                        </a>
                    </h5>

                    <p class="card-text">
                        @(p.Description?.Length > 80 ? p.Description.Substring(0,80)+"..." : p.Description)
                    </p>

                    @if (p.HasDiscount)
                    {
                        <h5 class="text-danger">@p.DisplayPrice.ToString("N0") đ</h5>
                        <del>@p.Price.ToString("N0") đ</del>
                        <span class="badge badge-danger">-@p.DiscountPercentage%</span>
                    }
                    else
                    {
                        <h5 class="text-danger">@p.Price.ToString("N0") đ</h5>
                    }

                    @if (p.StockQuantity > 0)
                    {
                        <span class="badge badge-success">Còn hàng</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary out-of-stock">Hết hàng</span>
                    }
                </div>

                <div class="card-footer">
                    @if (p.StockQuantity > 0)
                    {
                        <button class="btn btn-primary btn-block"
                                onclick="addToCart(@p.ProductID)">
                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-block" disabled>
                            Hết hàng
                        </button>
                    }
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("Products","Home")" class="btn btn-primary btn-lg">
        Xem tất cả sản phẩm <i class="fas fa-arrow-right"></i>
    </a>
</div>
