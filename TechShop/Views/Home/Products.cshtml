@model IEnumerable<TechShop.Models.Product>
    @{
        ViewBag.Title = "Sản phẩm";
    }

    <div class="row">
        <!-- Sidebar - Filters -->
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-filter"></i> Bộ lọc</h5>
                </div>
                <div class="card-body">
                    <!-- Category Filter -->
                    <h6 class="font-weight-bold">Danh mục</h6>
                    <div class="list-group mb-3">
                        <a href="@Url.Action("Products", "Home")" class="list-group-item list-group-item-action @(string.IsNullOrEmpty(ViewBag.CurrentCategory) ? "active" : "")">
                            Tất cả
                        </a>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <a href="@Url.Action("Products", "Home", new { categoryId = category.CategoryId })"
                               class="list-group-item list-group-item-action @(ViewBag.CurrentCategory == category.CategoryName ? "active" : "")">
                                @category.CategoryName
                            </a>
                        }
                    </div>

                    <!-- Sort Filter -->
                    <h6 class="font-weight-bold">Sắp xếp theo</h6>
                    <form method="get">
                        <input type="hidden" name="categoryId" value="@Request.QueryString["categoryId"]" />
                        <input type="hidden" name="search" value="@Request.QueryString["search"]" />
                        <select name="sortBy" class="form-control" onchange="this.form.submit()">
                            <option value="">Mới nhất</option>
                            <option value="price_asc" @(ViewBag.CurrentSort == "price_asc" ? "selected" : "")>Giá: Thấp đến cao</option>
                            <option value="price_desc" @(ViewBag.CurrentSort == "price_desc" ? "selected" : "")>Giá: Cao đến thấp</option>
                            <option value="name" @(ViewBag.CurrentSort == "name" ? "selected" : "")>Tên A-Z</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>

        <!-- Products List -->
        <div class="col-md-9">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>
                    @if (!string.IsNullOrEmpty(ViewBag.CurrentCategory))
                    {
                        <span>@ViewBag.CurrentCategory</span>
                    }
                    else if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <span>Kết quả tìm kiếm: "@ViewBag.SearchTerm"</span>
                    }
                    else
                    {
                        <span>Tất cả sản phẩm</span>
                    }
                </h3>
                <span class="text-muted">(@Model.Count() sản phẩm)</span>
            </div>

            <!-- Products Grid -->
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-md-4 col-sm-6 mb-4">
                            <div class="card h-100 product-card">
                                <a href="@Url.Action("ProductDetail", "Home", new { id = product.ProductId })">
                                    <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/Content/Images/no-image.jpg" : product.ImageUrl)"
                                         class="card-img-top"
                                         alt="@product.ProductName"
                                         style="height: 200px; object-fit: cover;">
                                </a>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="@Url.Action("ProductDetail", "Home", new { id = product.ProductId })" class="text-dark text-decoration-none">
                                            @product.ProductName
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted small" style="height: 60px; overflow: hidden;">
                                        @(product.Description?.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)
                                    </p>
                                    <div class="mb-2">
                                        <span class="badge badge-info">@product.Category.CategoryName</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="text-danger mb-0">@product.Price.ToString("N0") đ</h5>
                                        @if (product.StockQuantity > 0)
                                        {
                                            <span class="badge badge-success">Còn hàng</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Hết hàng</span>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer bg-white border-0">
                                    @if (product.StockQuantity > 0)
                                    {
                                        <button class="btn btn-primary btn-block" onclick="addToCart(@product.ProductId)">
                                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-block" disabled>
                                            Hết hàng
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Không tìm thấy sản phẩm nào.
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm) || !string.IsNullOrEmpty(ViewBag.CurrentCategory))
                    {
                        <a href="@Url.Action("Products", "Home")" class="alert-link">Xem tất cả sản phẩm</a>
                    }
                </div>
            }
        </div>
    </div>

    @section scripts {
        <style>
            .product-card {
                transition: transform 0.3s, box-shadow 0.3s;
            }

                .product-card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 4px 20px rgba(0,0,0,0.15);
                }

            .list-group-item {
                cursor: pointer;
            }
        </style>
    }
