@model IEnumerable<TechShop.Models.Product>
@{
    ViewBag.Title = "Sản phẩm";
}

<div class="row">

    <!-- ================= SIDEBAR ================= -->
    <div class="col-md-3">
        <div class="card product-sidebar">
            <div class="card-header">
                <h5><i class="fas fa-filter"></i> Bộ lọc</h5>
            </div>

            <div class="card-body">
                <h6>Danh mục</h6>
                <div class="list-group mb-3">
                    <a href="@Url.Action("Products","Home")"
                       class="list-group-item list-group-item-action @(string.IsNullOrEmpty(ViewBag.CurrentCategory)?"active":"")">
                        Tất cả
                    </a>

                    @foreach (var c in ViewBag.Categories)
                    {
                        <a href="@Url.Action("Products","Home",new { categoryId=c.CategoryID })"
                           class="list-group-item list-group-item-action @(ViewBag.CurrentCategory==c.CategoryName?"active":"")">
                            @c.CategoryName
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- ================= PRODUCTS ================= -->
    <div class="col-md-9">

        <!-- HEADER -->
        <div class="d-flex justify-content-between align-items-center product-header">
            <h3 class="product-title">
                @(ViewBag.CurrentCategory ?? "Tất cả sản phẩm")
            </h3>
            <span class="product-count">@Model.Count() sản phẩm</span>
        </div>

        <div class="row mt-4">
            @foreach (var p in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card product-card h-100">

                        <a href="@Url.Action("ProductDetail","Home",new { id=p.ProductID })">
                            <img src="@p.PrimaryImageURL"
                                 class="card-img-top"
                                 style="height:200px;object-fit:cover">
                        </a>

                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="@Url.Action("ProductDetail","Home",new { id=p.ProductID })">
                                    @p.ProductName
                                </a>
                            </h5>

                            <p class="card-text">
                                @(p.Description?.Length>80?p.Description.Substring(0,80)+"...":p.Description)
                            </p>

                            <span class="badge badge-info">@p.Category.CategoryName</span>

                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <h5 class="text-danger">@p.Price.ToString("N0") đ</h5>

                                @if (p.StockQuantity > 0)
                                {
                                    <span class="badge badge-success">Còn hàng</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary out-of-stock">Hết hàng</span>
                                }
                            </div>
                        </div>

                        <div class="card-footer">
                            @if (p.StockQuantity > 0)
                            {
                                <button class="btn btn-primary btn-block"
                                        onclick="addToCart(@p.ProductID)">
                                    <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-block" disabled>
                                    Hết hàng
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
